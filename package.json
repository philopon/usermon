{
  "name": "usermon",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@types/body-parser": "^1.16.2",
    "@types/express": "^4.0.35",
    "@types/ldapjs": "^1.0.0",
    "@types/pug": "^2.0.4",
    "body-parser": "^1.17.1",
    "express": "^4.15.2",
    "ldapjs": "^1.0.1",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "typescript": "^2.2.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-3"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "scripts": {
    "build": "run-p build:*",
    "build:server": "run-p build:server:*",
    "build:server:ts": "tsc",
    "watch": "npm-run-all -s build -p watch:*",
    "watch:dev-server": "nodemon -e js,pug --watch pug --watch dist dist/server.js 4566",
    "watch:server": "run-p watch:server:*",
    "watch:server:ts": "npm run build:server:ts -- -w"
  }
}
