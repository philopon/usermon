extends form

block title
    | 新規ユーザー

block form
    form(action="/new_user" method='post')
        div.form-group
            label(for="user_name") ユーザー名
            input.form-control(name="user_name" id="user_name" type="text" value=user_name)

        div.form-group
            label(for="surname") 苗字
            input.form-control(name="surname" id="surname" type="text" value=surname)

        div.form-group
            label(for="givenname") 名前
            input.form-control(name="givenname" id="givenname" type="text" value=givenname)

        div.form-group
            label(for="passwd") パスワード
            input.form-control(name="passwd" id="passwd" type="password")

        div.form-group
            label(for="passwd_re") パスワード (再入力)
            input.form-control(name="passwd_re" id="passwd_re" type="password")

        div.form-group
            button.btn.btn-default(type="submit") 作成

