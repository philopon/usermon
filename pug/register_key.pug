extends form

block title
    | 公開鍵登録

block form
    form(action="/register_key" method='post')
        div.form-group
            label(for="user_name") ユーザー名
            input.form-control(name="user_name", id="user_name", type="text" value=user_name)
        div.form-group
            label(for="passwd") パスワード
            input.form-control(name="passwd", id="passwd", type="password")
        div.form-group
            label(for="key") 公開鍵
            textarea.form-control(name="key" id="key" cols=80 rows=10)= key
        div.form-group
            button.btn.btn-default(type="submit") 登録
